  >
  <!-- group-focus:opacity-100 group-focus:pointer-events-auto hover:pointer-events-auto -->
  <div
    class="absolute -top-2/3 left-full text-sm text-start flex flex-col p-2 ml-2 opacity-0 bg-neutral-200 border border-neutral-300 rounded-md shadow-md pointer-events-none transition-opacity dark:bg-neutral-900 dark:border-neutral-800 lg:top-0 group-focus:opacity-100 group-focus:pointer-events-auto"
  >
    <a
      href="/en/"
      class="w-full h-full px-2 py-1 rounded-sm hover:bg-neutral-100 dark:hover:bg-neutral-950"
      >{
        currentLocale === "en" ? (
          <span class="flex items-center gap-2">
            English
            <svg viewBox="0 -960 960 960" class="w-4" fill="currentColor">
              <path d="M382-240 154-468l57-57 171 171 367-367 57 57-424 424Z" />
            </svg>
          </span>
        ) : (
          "Inglés"
        )
      }</a
    >
    <a
      href="/"
      class="w-full h-full px-2 py-1 rounded-sm hover:bg-neutral-100 dark:hover:bg-neutral-950"
      >{
        currentLocale === "en" ? (
          "Spanish"
        ) : (
          <span class="flex items-center gap-2">
            Español
            <svg viewBox="0 -960 960 960" class="w-4" fill="currentColor">
              <path d="M382-240 154-468l57-57 171 171 367-367 57 57-424 424Z" />
            </svg>
          </span>
        )
      }</a
    >
  </div>
</button>

