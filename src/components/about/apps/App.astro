---
import { Image } from "astro:assets";

const { name, icon } = Astro.props;
---

<div
  class="group/app w-16 h-24 flex flex-col items-center transition-all group-hover:scale-95 hover:!scale-110"
>
  <Image src={icon} alt={`${name} Icon`} loading="eager" class="w-full rounded-2xl" />
  <h3
    class="text-nowrap text-xs text-center hidden mt-2 group-hover/app:inline"
  >
    {name}
  </h3>
</div>
