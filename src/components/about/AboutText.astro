---
import { Image } from "astro:assets";
import { getI18N } from "../../i18n";
import PROFILE from "/public/profile.webp";

const { currentLocale } = Astro;

const lang: string = currentLocale!;
const i18n = getI18N(lang);
---

<section>
  <h1 class="font-semibold text-lg max-w-xl mx-auto mb-4">
    {i18n?.text.ABOUT_H1}
  </h1>
  <div
    class="relative w-full max-w-2xl h-40 mx-auto mb-12 bg-[url('/about-banner.webp')] bg-cover bg-center rounded-2xl"
  >
    <Image
      src={PROFILE}
      alt="Nacho.dev profile about section"
      loading="eager"
      class="absolute -bottom-10 left-0 w-24 rounded-full border-4 border-white dark:border-black md:left-11"
    />
  </div>
  <p
    class="text-neutral-500 text-sm max-w-xl mx-auto my-16 leading-8 dark:text-neutral-400"
    set:html={i18n?.text.ABOUT_P}
  />
</section>
